{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "experimentalDecorators": true,
    "importHelpers": true,

    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@/*": ["src/*"],
      "@lib/*": ["lib/*"]
    },

    "lib": ["es2015", "dom"],
    "types": ["webpack-env", "jest", "core-js"],

    "sourceMap": true,
    "outDir": "./dist/"
  },

  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
