{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "outDir": "./dist/",
    "strict": true,

    "sourceMap": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true
  },

  "include": ["./src/**/*"]
}
