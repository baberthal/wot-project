{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "outDir": "./dist/",
    "strict": true,

    "sourceMap": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "experimentalDecorators": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,

    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"]
    }
  },

  "include": ["./src/**/*"]
}
